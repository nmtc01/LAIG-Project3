<lxs>
    <scene root="root" axis_length="5" />

    <views default="defaultcamera" >
        <perspective id="defaultCamera" near="0.1" far="500" angle="60">
            <from x="0" y="15" z="5" />
            <to x="0" y="5" z="0" />
        </perspective>
    </views>

    <globals>  
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="Top" enabled="1">
            <location x="0.0" y="10.0" z="0.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <omni id="Side1" enabled="1">
            <location x="0.0" y="0.0" z="10.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <omni id="Side2" enabled="1">
            <location x="10.0" y="0.0" z="0.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <omni id="Side3" enabled="1">
            <location x="0.0" y="0.0" z="-10.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <omni id="Side4" enabled="1">
            <location x="-10.0" y="0.0" z="0.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="board_tex1" file="scenes/images/game/board1.png" />  
        <texture id="skybox" file="scenes/images/skybox.png" /> 
        <texture id="wood" file="scenes/images/wood.jpg" />   
    </textures>

    <materials> 
        <material id="white" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="translateSuperior">
            <translate x="0" y="0.3" z="0" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>

        <primitive id="gameboard">
            <gameboard x1="-2" z1="2" x2="2" z2="-2" NPartsU="30" NPartsV="30"/> 
        </primitive>

         <primitive id="skybox">
            <skybox size="50" />
        </primitive> 

         <primitive id="table">
            <table width="3" length="5" height="2" />
        </primitive>

        <primitive id="male">
            <obj model="male"/>  
        </primitive> 

    </primitives >
 
    <components>   

        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="ambient" />
                <componentref id="game" />
            </children>
        </component>

        <component id="ambient">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="skybox" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skybox" />
                <componentref id="ambient_obj"/>
            </children>
        </component>

        <component id="ambient_obj">
            <transformation>
                <scale x="2" y="2" z="2"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref id="table" />
            </children>
        </component>

        <component id="game">
            <transformation>
               <translate x="0" y="5.2" z="0"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" />
            <children>
                <componentref id="gameboard" />
            </children>
        </component>

        <component id="gameboard">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="board_tex1" length_s="1" length_t="1" />
            <children>
                <primitiveref id="gameboard" />
                <!--game tiles-->
            </children>
        </component>

    </components>
   
</lxs>