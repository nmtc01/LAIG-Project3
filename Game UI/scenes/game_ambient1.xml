<lxs>
    <scene root="root" axis_length="5" />

    <views default="defaultcamera" >
        <perspective id="defaultCamera" near="0.1" far="500" angle="60">
            <from x="0" y="10" z="5" />
            <to x="0" y="5" z="0" />
        </perspective>
    </views>

    <globals>  
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="Top" enabled="1">
            <location x="0.0" y="10.0" z="0.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <omni id="Side1" enabled="1">
            <location x="0.0" y="0.0" z="10.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <omni id="Side2" enabled="1">
            <location x="10.0" y="0.0" z="0.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <omni id="Side3" enabled="1">
            <location x="0.0" y="0.0" z="-10.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>

        <omni id="Side4" enabled="1">
            <location x="-10.0" y="0.0" z="0.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="board_tex1" file="scenes/images/game/board1.png" />  
        <texture id="skybox" file="scenes/images/skybox/kitchen.png" /> 
        <texture id="wood" file="scenes/images/wood.jpg" />   

        <texture id="BW" file="scenes/images/game/BlueWhitePiece.png" />
        <texture id="BB" file="scenes/images/game/BlueBlackPiece.png" />  
        <texture id="RW" file="scenes/images/game/RedWhitePiece.png" />  
        <texture id="RB" file="scenes/images/game/RedBlackPiece.png" />     
    </textures>

    <materials> 
        <material id="white" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
         <material id="black" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
         <material id="metal" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.35" g="0.35" b="0.35" a="1.0" />
            <specular r="0.9" g="0.9" b="0.9" a="1.0" />
        </material>
        <material id="blue" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="1.0" a="1.0" />
        </material>
        <material id="red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="translateSuperior">
            <translate x="0" y="0.3" z="0" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="skybox">
            <skybox size="30" />
        </primitive> 

         <primitive id="table">
            <table width="3" length="5" height="2" />
        </primitive>

        <primitive id="piece_top">
            <sphere radius="1/3" slices="50" stacks="50" />
        </primitive> 

        <primitive id="piece_mid">
            <cylinder2 base="1/3" top="1/3" height="1/6" slices="50" stacks="50" />
        </primitive> 

        <primitive id="piece_bot">
            <sphere radius="1/3" slices="50" stacks="50" />
        </primitive> 

        <primitive id="tile">
            <plane npartsU="30" npartsV="30" />
        </primitive> 

    </primitives >
 
    <components>   

        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="ambient" />
               <!-- orchestrator-->
            </children>
        </component>

        <component id="ambient">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" />
            <children>
                <componentref id="skybox" />
                <componentref id="ambient_obj"/>
            </children>
        </component>

        <component id="skybox">
            <transformation>
                <translate x="0" y="30" z="0"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="skybox" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skybox" />
            </children>
        </component>

        <component id="ambient_obj">
            <transformation>
                <scale x="2" y="2" z="2"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref id="table" />
            </children>
        </component>

        <!-- TEMPLATES -->
        <component id="pieceBlueWhite">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="BW" length_s="1" length_t="1"/>
            <children>
                <componentref id="pieceTop" />
                <componentref id="pieceMid" />
                <componentref id="pieceBot" />
            </children>
        </component>

        <component id="pieceBlueBlack">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="BB" length_s="1" length_t="1"/>
            <children>
                <componentref id="pieceTop" />
                <componentref id="pieceMid" />
                <componentref id="pieceBot" />
            </children>
        </component>

        <component id="pieceRedWhite">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="RW"  length_s="1" length_t="1"/>
            <children>
                <componentref id="pieceTop" />
                <componentref id="pieceMid" />
                <componentref id="pieceBot" />
            </children>
        </component>

        <component id="pieceRedBlack">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="RB" length_s="1" length_t="1"/>
            <children>
                <componentref id="pieceTop" />
                <componentref id="pieceMid" />
                <componentref id="pieceBot" />
            </children>
        </component>

        <component id="pieceTop" >
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" />
            <children>
                <primitiveref id="piece_top" />
            </children>
        </component>

        <component id="pieceMid">
            <transformation>
            </transformation>
            <materials>
                <material id="metal" />
            </materials>
                <texture id="none" />
            <children>
                <primitiveref id="piece_mid" />
            </children>
        </component>

        <component id="pieceBot">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" />
            <children>
                <primitiveref id="piece_bot" />
            </children>
        </component>

        <component id="tiles">
            <transformation>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
                <texture id="none" />
            <children>
                <componentref id="tileBlack" />
                <componentref id="tileWhite" />
            </children>
        </component>

        <component id="tileBlack">
            <transformation>
            </transformation>
            <materials>
                <material id="black" />
            </materials>
                <texture id="none" />
            <children>
                <primitiveref id="tile" />
            </children>
        </component>

         <component id="tileWhite">
            <transformation>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
                <texture id="none" />
            <children>
                <primitiveref id="tile" />
            </children>
        </component>

    </components>
   
</lxs>