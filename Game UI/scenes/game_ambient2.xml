<lxs>
    <scene root="root" axis_length="5" />

    <views default="defaultcamera" >
        <perspective id="defaultCamera" near="0.1" far="500" angle="60">
            <from x="0" y="10" z="5" />
            <to x="0" y="5" z="0" />
        </perspective>
          <perspective id="anotherCamera" near="0.1" far="500" angle="60">
            <from x="0" y="50" z="5" />
            <to x="0" y="5" z="0" />
        </perspective>
    </views>

    <globals>  
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="Top" enabled="1">
            <location x="0.0" y="10.0" z="0.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni> 
         <omni id="Red" enabled="0">
            <location x="0.0" y="10.0" z="0.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="0.0" b="0.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>   
    </lights>

    <textures>
        <texture id="board_tex1" file="scenes/images/game/board1.png" />  
        <texture id="skybox" file="scenes/images/skybox/kitchen.png" /> 
        <texture id="wood" file="scenes/images/wood.jpg" />   

        <texture id="BW" file="scenes/images/game/BlueWhitePiece.png" />
        <texture id="BB" file="scenes/images/game/BlueBlackPiece.png" />  
        <texture id="RW" file="scenes/images/game/RedWhitePiece.png" />  
        <texture id="RB" file="scenes/images/game/RedBlackPiece.png" /> 

        <texture id="WT" file="scenes/images/game/snow_tile.jpg" />  
        <texture id="BT" file="scenes/images/game/ice_tile.jpg" />      
    </textures>

    <materials> 
        <material id="white" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
         <material id="black" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
         <material id="metal" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.35" g="0.35" b="0.35" a="1.0" />
            <specular r="0.9" g="0.9" b="0.9" a="1.0" />
        </material>
        <material id="blue" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="1.0" a="1.0" />
        </material>
        <material id="red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="translateSuperior">
            <translate x="0" y="0.3" z="0" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="skybox">
            <skybox size="30" />
        </primitive> 

         <primitive id="table">
            <table width="3" length="5" height="2" />
        </primitive>

        <primitive id="piece_top">
            <sphere radius="1/3" slices="50" stacks="50" />
        </primitive> 

        <primitive id="piece_mid">
            <cylinder2 base="1/3" top="1/3" height="1/6" slices="50" stacks="50" />
        </primitive> 

        <primitive id="piece_bot">
            <sphere radius="1/3" slices="50" stacks="50" />
        </primitive> 

        <primitive id="tile">
            <plane npartsU="30" npartsV="30" />
        </primitive> 

    </primitives >
 
    <components>   

        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="ambient" />
            </children>
        </component>

        <component id="ambient">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" />
            <children>
                <componentref id="skybox" />
            </children>
        </component>

        <component id="skybox">
            <transformation>
                <translate x="0" y="30" z="0"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="skybox" length_s="1" length_t="1" />
            <children>
                <primitiveref id="skybox" />
            </children>
        </component>

        <!-- TEMPLATES -->
        <component id="piece_blue_white">
            <transformation>
                <translate x="0" y="5.6" z="0"/>
                <scale x="0.4" y="0.4" z="0.4" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
                <texture id="BW" length_s="1" length_t="1"/>
            <children>
                <componentref id="piece_top" />
                <componentref id="piece_mid" />
                <componentref id="piece_bot" />
            </children>
        </component>

        <component id="piece_blue_black">
            <transformation>
                <translate x="0" y="5.6" z="0"/>
                <scale x="0.4" y="0.4" z="0.4" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
                <texture id="BB" length_s="1" length_t="1"/>
            <children>
               <componentref id="piece_top" />
                <componentref id="piece_mid" />
                <componentref id="piece_bot" />
            </children>
        </component>

        <component id="piece_red_white">
            <transformation>
                <translate x="0" y="5.6" z="0"/>
                <scale x="0.4" y="0.4" z="0.4" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
                <texture id="RW" length_s="1" length_t="1"/>
            <children>
               <componentref id="piece_top" />
                <componentref id="piece_mid" />
                <componentref id="piece_bot" />
            </children>
        </component>

        <component id="piece_red_black">
            <transformation>
                <translate x="0" y="5.6" z="0"/>
                <scale x="0.4" y="0.4" z="0.4" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
                <texture id="RB" length_s="1" length_t="1"/>
            <children>
                <componentref id="piece_top" />
                <componentref id="piece_mid" />
                <componentref id="piece_bot" />
            </children>
        </component>

        <component id="piece_top" >
            <transformation>
                <scale x="0.99" y="0.4" z="0.99" />
             <rotate axis="z" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" />
            <children>
                <primitiveref id="piece_top" />
            </children>
        </component>

        <component id="piece_mid">
            <transformation>
                <scale x="1" y="0.5" z="1" />
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="metal" />
            </materials>
                <texture id="none" />
            <children>
                <primitiveref id="piece_mid" />
            </children>
        </component>

        <component id="piece_bot">
            <transformation>
                <translate x="0" y="-0.5" z="0"/>
                <scale x="0.99" y="0.4" z="0.99" />
                <rotate axis="z" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" />
            <children>
                <primitiveref id="piece_bot" />
            </children>
        </component>

        <component id="tile_black">
            <transformation>
                <translate x="0" y="5.25" z="0"/>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
                <texture id="BT" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="tile" />
            </children>
        </component>
        

         <component id="tile_white">
            <transformation>
                <translate x="0" y="5.25" z="0"/>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
                <texture id="WT" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="tile" />
            </children>
        </component>

    </components>
   
</lxs>